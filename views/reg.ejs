<%- include("parts/header") %>
<% var error  %> 

<div class="reg" >
    <div  class="container text-light d-flex justify-content-center align-items-center flex-direction-column " style="height:100vh;width:40vw;" >
        
            <!-- reg Form s-->

            <form method="POST" action="/reg" >   
